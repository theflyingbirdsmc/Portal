FROM ubuntu:22.04
RUN apt-get update \
	&& apt-get install -y \
	curl \
	git \
	sudo \
	nano \
	wget \
	zip \ 
	unzip \
    libsqlite3-dev \
    python3 \
    build-essential \
	make \
	&& rm -rf /var/lib/apt/lists/*

# Install NodeJS for Backstage development.
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | sudo -E bash - && \
    sudo apt-get install -y nodejs
RUN npm install -g yarn
RUN yarn add npkill -W

ARG POSTGRES_HOST
ARG POSTGRES_USER
ARG POSTGRES_PORT
ARG POSTGRES_PASSWORD

ARG TFB_APP_ID
ARG TFB_APP_WEBHOOKURL
ARG TFB_APP_CLIENT_ID

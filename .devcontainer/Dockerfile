ENV TFB_APP_PRIVATE_KEY_4=$TFB_APP_PRIVATE_KEY_4
ENV TFB_APP_PRIVATE_KEY_5=$TFB_APP_PRIVATE_KEY_5
ENV TFB_APP_PRIVATE_KEY_6=$TFB_APP_PRIVATE_KEY_6
